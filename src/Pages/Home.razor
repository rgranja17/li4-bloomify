@page "/"

<PageTitle>Bloomify</PageTitle>

<div class="bg-white w-full min-h-screen flex flex-col overflow-hidden">
    <header class="relative w-full p-4">
        <img src="assets/logoBloomify.png" alt="Bloomify Logo" 
                class="h-auto w-auto max-w-[200px] sm:max-w-[250px] md:max-w-[300px] relative z-10 mx-auto md:mx-4">
        <img src="assets/leaves1.png" alt="leaves"
                class="absolute top-0 right-0 w-[150px] sm:w-[200px] md:w-2/4 h-auto md:h-[250px] z-0 animate-slide-in-right">
    </header>

    <main class="flex-1 flex flex-col md:flex-row items-start justify-between px-4 md:px-14 relative">
        <div class="text-left max-w-full mt-8 sm:mt-12 md:mt-24 z-10">
            <span class="inline-block text-custom_green text-xs sm:text-sm md:text-lg font-outfit font-bold 
                        px-3 sm:px-5 md:px-10 py-1 rounded-full bg-gray-100">
                amazon best-seller
            </span>
            
            <h1 class="text-3xl sm:text-4xl md:text-6xl font-outfit font-light text-black leading-tight 
                        mt-4 sm:mt-6 mb-4 sm:mb-6">
                Por mais <span class="text-custom_green">verde</span><br />
                <span class="text-black font-bold text-4xl sm:text-6xl md:text-8xl">
                    na sua <span class="font-bold text-custom_green animate-pulse-color">vida</span><span class="font-bold text-custom_green">.</span>
                </span>
            </h1>
            
            <div class="px-0 sm:px-16 md:px-32 mt-6 sm:mt-8 md:mt-10">
                <button @onclick="NavigateToStart" 
                        class="w-full sm:w-auto text-xl sm:text-2xl md:text-6xl font-outfit 
                                px-4 sm:px-6 py-3 sm:py-4 bg-custom_green text-white font-semibold 
                                rounded-lg shadow-lg hover:bg-opacity-90 transition cursor-pointer">
                    comece já
                </button>
            </div>
        </div>

        <!-- Mantendo a div da bola verde e planta como solicitado -->
        <div class="absolute right-[-100px] bottom-[-450px] md:right-[-150px] md:bottom-[-600px] -translate-y-1/2">
            <div class="bg-custom_green rounded-full md:w-[770px] md:h-[770px] lg:w-0 lg:h-0 xl:h-[800px] xl:w-[800px] flex items-center justify-center shadow-lg overflow-hidden relative">
                <img src="assets/vasoPaginaInicial.png" alt="Planta" 
                        class="absolute w-[300px] md:w-[520px] md:top-[38%] xl:top-[40%] left-[47%] transform -translate-x-1/2 -translate-y-1/2">
            </div>
        </div>
        
        <img src="assets/leaves.png" alt="leaves"
                class="absolute bottom-0 left-0 w-full md:w-2/4 h-[150px] sm:h-[200px] md:h-[230px] pointer-events-none animate-slide-in-left">
    </main>
</div>

@code {
    private void NavigateToStart()
    {
        NavigationManager.NavigateTo("/destaques", true);
    }
}