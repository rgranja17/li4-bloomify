@using Microsoft.AspNetCore.Components.Web

<header class="relative w-full px-4 py-2 flex justify-between items-center z-10">
    <!-- Logo (Desktop Only) -->
    <a href="/" class="relative z-20 hidden lg:block">
        <img src="assets/logoBloomify.png" alt="Bloomify Logo" class="h-12 sm:h-16 w-auto">
    </a>

    <!-- Mobile Menu Button -->
    <button 
        @onclick="ToggleMenu"
        class="lg:hidden relative z-20 p-2 text-custom_green hover:text-opacity-80 transition-colors"
        aria-label="Toggle Menu">
        @if (!isMenuOpen)
        {
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
        }
        else
        {
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        }
    </button>

    <!-- Desktop Navigation -->
    <div class="hidden lg:flex items-center space-x-6 mr-4">
        <a href="/destaques" 
            class="text-custom_green text-xl xl:text-2xl font-extrabold transition-colors hover:text-opacity-80 underline">
            Destaques
        </a>
        <a href="/login" 
            class="text-custom_green text-xl xl:text-2xl font-bold transition-colors hover:text-opacity-80">
            Login
        </a>
        <button
            @onclick="NavigateToRegister"
            type="submit" 
            class="w-32 h-10 flex items-center justify-center bg-custom_green font-outfit font-bold text-lg xl:text-xl text-white 
                    rounded-full hover:bg-custom_gray/5 hover:border-custom_green hover:ring-4 hover:ring-custom_green 
                hover:text-custom_green hover:shadow-lg hover:scale-105 transition-all duration-500 ease-in-out">
            Registar
        </button>
    </div>

    <!-- Mobile Menu Overlay -->
    <div class="@(isMenuOpen ? "fixed" : "hidden") inset-0 bg-black bg-opacity-50 z-10 lg:hidden"
            @onclick="ToggleMenu">
    </div>

    <!-- Mobile Menu -->
    <div class="@(isMenuOpen ? "translate-x-0" : "translate-x-full") fixed top-0 right-0 bottom-0 md:w-3/6 bg-white 
                shadow-lg transform transition-transform duration-300 ease-in-out z-10 lg:hidden">
        <div class="flex flex-col pt-8 px-6 space-y-6">
            <!-- Logo in Mobile Menu -->
            <a href="/" class="flex justify-center mb-4" @onclick="ToggleMenu">
                <img src="assets/logoBloomify.png" alt="Bloomify Logo" class="h-14 w-auto">
            </a>
            <a href="/destaques" 
                class="text-custom_green text-xl md:text-2xl font-extrabold transition-colors hover:text-opacity-80 underline"
                @onclick="ToggleMenu">
                Destaques
            </a>
            <a href="/login" 
                class="text-custom_green text-xl md:text-2xl font-bold transition-colors hover:text-opacity-80"
                @onclick="ToggleMenu">
                Login
            </a>
            <button
                @onclick="NavigateToRegisterMobile"
                type="submit" 
                class="w-full h-12 flex items-center justify-center bg-custom_green font-outfit font-bold text-xl md:text-2xl 
                    text-white rounded-full hover:bg-custom_gray hover:border-custom_green hover:ring-4 
                    hover:ring-custom_green hover:text-custom_green hover:shadow-lg hover:scale-105 
                        transition-all duration-500 ease-in-out">
                Registar
            </button>
        </div>
    </div>
</header>

@code {
    private bool isMenuOpen = false;

    private void ToggleMenu()
    {
        isMenuOpen = !isMenuOpen;
    }

    private void NavigateToRegister()
    {
        NavigationManager.NavigateTo("/register");
    }

    private void NavigateToRegisterMobile()
    {
        isMenuOpen = false;
        NavigateToRegister();
    }
}